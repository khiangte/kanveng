<% if @member.errors.any? %>
	<div class="alert alert-info" role="alert">
		<% for msg in @member.errors.full_messages %>
			<li><%= msg %></li>
		<% end %>
	</div>
<% end %>
<%= form_for @member, url: (@member.id.blank? ? create_member_path : update_member_path), :method => :POST do |f| %>
	<form>
		  <div class="form-group">
		    <%= f.label :full_name %><br />
		    <%= f.text_field :full_name, :class => "form-control", :placeholder=>"Name" %>
		  </div>
		  <div class="row">
			  <div class="col-xs-6">
					<div class="form-group">
					    <%= f.label :sex %> 
					  	<%= f.select(:sex, options_for_select([['Male','male'],['Female','female']]),{},{:class => "form-control"}) %>
				  </div>
				 </div>
				 <div class="col-xs-6">
				   <div class="form-group">
				   	<%= f.label :dob %> <br />
				    <%= f.date_select(:dob, {:start_year => Date.current.year - 12, :end_year => 1920, :default => 18.years.ago}, {:class => 'form-control-date'}) %>
				  </div>
				 </div>
			</div>
		  <div class="form-group">
		    <%= f.label :birth_place %><br />
		    <%= f.text_field :birth_place, :class => "form-control", :placeholder=>"Birth Place" %>
		  </div>

		  <div class="form-group">
		    <%= f.label :epic_no %><br />
		    <%= f.text_field :epic_no, :class => "form-control", :placeholder=>"EPIC Number" %>
		  </div>

		  <div class="form-group">
		    <%= f.label :occupation %><br />
		    <%= f.text_area :occupation, :class => "form-control", :placeholder=>"Detailed occupation" %>
		  </div>

	 
	  <div class="form-group">
	    <%= f.label :address %><br />
	    <%= f.text_area :address, :class => "form-control", :placeholder=>"Address" %>
	  </div>
	  <div class="form-group">
	    <%= f.label :photo_url %><br />
	    <%= f.text_field :photo_url, :class => "form-control", :placeholder=>"Paste photo url here" %>
	  </div>
	  <%= f.hidden_field :id, :value => @member.id %>
	  <div class="form-group">
	    <%= f.submit :class => "btn btn-default" %>
	  </div>
	</form>
<% end %>